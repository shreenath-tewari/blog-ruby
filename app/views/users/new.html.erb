<h1>Sign Up</h1>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <h2>Form is Invalid</h2>
        <div class="error_messages">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </p>
    </div>
    <div class="field">
      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </p>
    </div>
    <div class="field">
      <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </p>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
<% end %>